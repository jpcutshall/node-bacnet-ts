{
    "compilerOptions": {
      "target": "ES2021",
      "module": "node16",
      "lib": ["ES2021"],
      "moduleResolution": "node16",
      "rootDir": ".",
      "outDir": "build",
      "allowSyntheticDefaultImports": false,
      "importHelpers": true,
      "alwaysStrict": true,
      "sourceMap": true,
      "forceConsistentCasingInFileNames": true,
      "noFallthroughCasesInSwitch": true,
      "noImplicitReturns": true,
    //   "noUnusedLocals": true,
    //   "noUnusedParameters": true,
    },
    "include": ["lib/**/*", "__tests__/**/*"]
  }